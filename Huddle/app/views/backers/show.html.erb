<%- model_class = Backer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:paid_amount) %>:</strong></dt>
  <dd><%= @backer.paid_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perk_level) %>:</strong></dt>
  <dd><%= @backer.perk_level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @backer.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_id) %>:</strong></dt>
  <dd><%= @backer.event.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_path(current_user.id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_event_backer_path(current_user.id,params[:event_id],@backer), :class => 'btn btn-default' %>
