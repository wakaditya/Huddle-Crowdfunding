<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Collection</th>
      <th>Funding deadline</th>
      <th>Event date</th>
      <th>Rating</th>
      <th>Location</th>
      <th>Ticket</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.tag %></td>
        <td><%= event.collection %></td>
        <td><%= event.funding_deadline %></td>
        <td><%= event.event_date %></td>
        <td><%= event.rating %></td>
        <td><%= event.location %></td>
        <td><%= event.ticket %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

